<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.taylorinsuranceapp.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/companylogo" />

        <TextView
            android:id="@+id/loginEmailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/loginEmailEdit"
            android:layout_toLeftOf="@+id/loginBtn"
            android:layout_toStartOf="@+id/loginBtn"
            android:text="@string/loginEmailView"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/loginEmailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/loginPasswordView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginEmailView"
            android:layout_alignStart="@+id/loginEmailView"
            android:layout_below="@+id/loginEmailEdit"
            android:layout_marginTop="20dp"
            android:text="@string/loginPasswordView"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/loginPasswordEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/loginPasswordView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="textEmailAddress|textPassword" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/loginEmailView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:text="Login" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
