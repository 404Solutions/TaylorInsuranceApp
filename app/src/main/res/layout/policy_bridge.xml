<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="47dp">

        <Button
            android:id="@+id/policyBridgeVehicleBtn"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_above="@+id/policyBridgeHomeBtn"
            android:layout_alignLeft="@+id/policyBridgeHomeBtn"
            android:layout_alignStart="@+id/policyBridgeHomeBtn"
            android:layout_marginBottom="47dp"
            android:text="Auto Policy"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/policyBridgeHomeBtn"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Home Policy"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/policyBridgeBackBtn"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_alignLeft="@+id/policyBridgeHomeBtn"
            android:layout_alignStart="@+id/policyBridgeHomeBtn"
            android:layout_below="@+id/policyBridgeHomeBtn"
            android:layout_marginTop="51dp"
            android:text="Back"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="410dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/companylogo" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>